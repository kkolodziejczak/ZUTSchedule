<UserControl x:Class="ZUTSchedule.desktop.WeekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZUTSchedule.desktop"
             mc:Ignorable="d"
             >


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition  Height="20"/>
            <RowDefinition  Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- News Feed -->

        <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Hidden"
                      Width="{Binding ElementName=Week, Path=ActualWidth}"
                      Grid.Row="0"
                      >
            <Grid>
                <local:NewsContainer DataContext="{Binding News}"
                                     x:Name="News"
                                     Loaded="UserControl_Loaded"
                                     />
                <local:NewsContainer DataContext="{Binding News}"
                                     x:Name="News2"
                                     Visibility="Collapsed"
                                     />
            </Grid>
        </ScrollViewer>



        <!-- Classes -->
        <ItemsControl Grid.Row="1"
                        Name="Week"
                        ItemsSource="{Binding Days}"
                        >

            <!-- Set items panel to StackPanel in vertical orientatnion-->
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <!-- Set items template as ProjectItemControl -->
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="0.5" BorderBrush="Black">
                        <local:DayView DataContext="{Binding}" Width="200"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>
    </Grid>

</UserControl>
